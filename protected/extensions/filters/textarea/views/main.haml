.filter.#{$this->slideEnable?'slide':''}
    -if($this->slideEnable)
        =CHtml::hiddenField($this->inputId,$this->slide,array('class'=>'slide-value'))
    .name =$this->name
    .content.#{$this->slideEnable&&$this->slide==0?'slideUp':''}
        =CHtml::activeTextArea($this->model,$this->attribute)